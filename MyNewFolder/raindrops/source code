#include "raindrops.h"
#include <stdio.h>
#include <string.h>

void convert(char *re, int num)
{
    re[0] = '\0';
    if (num % 3 == 0) 
        strcat(re, "Pling");
    if (num % 5 == 0)
        strcat(re, "Plang");
    if (num % 7 == 0)
        strcat(re, "Plong");

    if (re[0] == '\0') 
    
        sprintf(re, "%d", num);
}
